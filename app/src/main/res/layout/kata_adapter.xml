<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="vertical"
        android:background="@android:color/transparent" android:paddingTop="5dp">

    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:layout_width="100dp" android:layout_height="100dp" android:layout_marginLeft="10dp"
                   card_view:srcCompat="@drawable/logo" android:src="@drawable/logo"/>
        <TextView
                android:id="@+id/name"
                android:text="Name"
                android:textColor="@color/colortittlelist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:background="@android:color/transparent" android:layout_gravity="center"/>
    </LinearLayout>

    <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#FFFFFF"
            android:layout_margin="5dp"/>


</LinearLayout>